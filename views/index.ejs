<body>
    <h1>Counter</h1>
    <% if (counter == 1) { %>
        <p> <%= counter %> time.</p>
    <% } else { %>
        <p> <%= counter %> times.</p>
    <% } %>
    <form method="POST" action="/two">
        <input type="submit" value="+2">
    </form>
    <form method="POST" action="/reset">
        <input type="submit" value="reset">
    </form>
</body>
</html>